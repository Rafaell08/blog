<h1>Pages#home</h1>
<p>Find me in app/views/pages/home.html.erb</p>

<% if current_user %>
    <p>Hello <%= current_user.email %>!</p>
    <p>You are a [<%= current_user.role %>]

    <% if current_user.admin? %>
        <p>There are <%= User.count %> users</p>
    <% end %>

    <p>You have a successfully authentication</p>

    <p><%= link_to "My articles", articles_path%></p>
    <p><%= link_to "Sign out", destroy_user_session_path, 'data-turbo-method': :delete %></p>
<% else %>
    <%= render 'articles/article' %>

    <p>You are not signed in.</p>
    <p><%= link_to "Sign Up!", new_user_registration_path %></p>
    <p><%= link_to "Login", new_user_session_path %></p>
<% end %>
